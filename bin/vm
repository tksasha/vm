#!/usr/bin/env ruby
# frozen_string_literal: true

require 'tty-prompt'

require_relative '../config/application'

prompt = TTY::Prompt.new

pastel = Pastel.new

loop do
  id = SelectProductMenu.render

  product = Product.find id

  price = product['price']

  total_inserted_coins = 0

  inserted_coins = Hash.new(0)

  while total_inserted_coins < price
    koin = InsertCoinsMenu.render(price, total_inserted_coins)

    inserted_coins[koin] += 1

    total_inserted_coins += koin
  end

  Product.pop id

  begin
    print "\n"
    puts pastel.bold 'Change:'
    puts ChangeService.calculate total_inserted_coins - price

    inserted_coins.each do |coin, quantity|
      quantity.times { Coin.push coin }
    end
  rescue InsufficientCoinsError
    Product.push id

    puts pastel.bold.red "Sorry, but we don't have sufficient total_inserted_coins to change."
  end

  DebugInfoService.render(price, total_inserted_coins, inserted_coins)

  break if prompt.no? 'Do you want to continue?'
end
